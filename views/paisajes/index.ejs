<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD PAISAJES - Listado</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-light">
    <div class="container">
        <div class="row my-5">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2 class="card-title">Lista de Sitios Turísticos</h2>
                            <a href="/paisajes/agregar" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Agregar Nuevo
                            </a>
                        </div>
                        
                        <div class="row">
                            <% if (paisajes && paisajes.length > 0) { %>
                                <% paisajes.forEach(paisaje => { %>
                                    <div class="col-md-4 mb-4">
                                        <div class="card h-100">
                                            <img src="<%= paisaje.imagen %>" class="card-img-top" alt="<%= paisaje.nombre %>" style="height: 200px; object-fit: cover;">
                                            <div class="card-body">
                                                <h5 class="card-title"><%= paisaje.nombre %></h5>
                                                <p class="card-text"><%= paisaje.descripcion %></p>
                                                <p class="card-text"><strong>Precio: </strong>$<%= paisaje.precio.toFixed(2) %></p>
                                            </div>
                                            <div class="card-footer bg-transparent border-0">
                                                <div class="d-flex justify-content-end gap-2">
                                                    <a href="/paisajes/editar/<%= paisaje._id %>" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i> Editar
                                                    </a>
                                                    <a href="/paisajes/eliminar/<%= paisaje._id %>" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i> Eliminar
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="col-12 text-center">
                                    <p>No hay sitios turísticos registrados aún.</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Verifica si hay mensajes para mostrar
        window.onload = function() {
            const urlParams = new URLSearchParams(window.location.search);
            const mensaje = urlParams.get('mensaje');
            const tipo = urlParams.get('tipo');
            
            if (mensaje) {
                Swal.fire({
                    title: tipo === 'success' ? '¡Éxito!' : 'Error',
                    text: mensaje,
                    icon: tipo,
                    confirmButtonText: 'Ok',
                    confirmButtonColor: tipo === 'success' ? '#198754' : '#dc3545'
                });
                
                // Limpia los parámetros de la URL
                window.history.replaceState({}, document.title, window.location.pathname);
            }
        }
    </script>
</body>
</html>